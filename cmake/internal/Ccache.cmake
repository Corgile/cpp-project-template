IF(${PROJECT_NAME}_ENABLE_CCACHE)
  INCLUDE(${PROJECT_SOURCE_DIR}/cmake/internal/Utils.cmake)
  FIND_PROGRAM(CCACHE_BIN NAMES ccache)
  IF(NOT x${CCACHE_BIN} STREQUAL "x")
    VERBOSE_MESSAGE("ccache: " ${CCACHE_BIN})
    SET_PROPERTY(GLOBAL PROPERTY RULE_LAUNCH_COMPILE ccache)
    SET_PROPERTY(GLOBAL PROPERTY RULE_LAUNCH_LINK ccache)
  ELSE()
    MESSAGE(STATUS "${BR}启用了Ccache支持,但是找不到 Ccache 可执行文件${COLOR_OFF}")
  ENDIF()
ENDIF()